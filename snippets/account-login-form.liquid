<form method="post" action="/account/login" class="account-form account-login-form" autocomplete="on">
  <h2>Sign In</h2>
  {% if form.errors %}
    <div class="form-errors" role="alert">
      {% for field in form.errors %}
        <div>{{ field | capitalize }}: {{ form.errors.messages[field] }}</div>
      {% endfor %}
    </div>
  {% endif %}
  <label for="CustomerEmail">Email</label>
  <input type="email" id="CustomerEmail" name="customer[email]" autocomplete="email" required>
  
  <label for="CustomerPassword">Password</label>
  <input type="password" id="CustomerPassword" name="customer[password]" autocomplete="current-password" required>
  
  <button type="submit">Sign In</button>
  <a href="/account/register" class="account-link">Create account</a>
  <a href="/account/recover" class="account-link">Forgot password?</a>
</form>