{%- comment -%}
Sidebar filtering for collections using tags, price, and vendor.
{%- endcomment -%}
<aside class="collection-filters" aria-label="Filters">
  <form id="collection-filters-form" method="get" action="">
    <details open>
      <summary>Product Type</summary>
      {% assign types = collection.all_types %}
      {% for type in types %}
        <label>
          <input type="checkbox" name="type" value="{{ type }}" {% if current_tags contains type %}checked{% endif %}>
          {{ type }}
        </label>
      {% endfor %}
    </details>
    <details>
      <summary>Vendor</summary>
      {% assign vendors = collection.all_vendors %}
      {% for vendor in vendors %}
        <label>
          <input type="checkbox" name="vendor" value="{{ vendor }}" {% if current_tags contains vendor %}checked{% endif %}>
          {{ vendor }}
        </label>
      {% endfor %}
    </details>
    <details>
      <summary>Price</summary>
      <label><input type="radio" name="price" value="0-50"> Under $50</label>
      <label><input type="radio" name="price" value="50-100"> $50 to $100</label>
      <label><input type="radio" name="price" value="100-"> Over $100</label>
    </details>
    <button type="submit" class="btn">Apply Filters</button>
  </form>
</aside>