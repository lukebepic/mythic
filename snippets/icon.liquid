{%- comment -%}
  icon.liquid
  Usage: {% render 'icon', name: 'visa' %}
  Renders an SVG or image for the given payment or UI icon.
  Add more icons as needed following the structure.
{%- endcomment -%}

{%- case name -%}
  {%- when 'visa' -%}
    <svg viewBox="0 0 48 32" width="40" height="26" aria-label="Visa"><rect width="48" height="32" rx="4" fill="#fff"/><text x="24" y="20" text-anchor="middle" fill="#1a1f71" font-size="16" font-family="Arial" font-weight="bold">VISA</text></svg>
  {%- when 'mastercard' -%}
    <svg viewBox="0 0 48 32" width="40" height="26" aria-label="Mastercard">
      <rect width="48" height="32" rx="4" fill="#fff"/>
      <circle cx="20" cy="16" r="9" fill="#eb001b"/>
      <circle cx="28" cy="16" r="9" fill="#f79e1b" fill-opacity=".85"/>
      <text x="24" y="28" text-anchor="middle" fill="#555" font-size="8" font-family="Arial">Mastercard</text>
    </svg>
  {%- when 'amex' -%}
    <svg viewBox="0 0 48 32" width="40" height="26" aria-label="American Express"><rect width="48" height="32" rx="4" fill="#fff"/><text x="24" y="20" text-anchor="middle" fill="#2e77bc" font-size="13" font-family="Arial" font-weight="bold">AMEX</text></svg>
  {%- when 'paypal' -%}
    <svg viewBox="0 0 48 32" width="40" height="26" aria-label="PayPal"><rect width="48" height="32" rx="4" fill="#fff"/><text x="24" y="20" text-anchor="middle" fill="#003087" font-size="13" font-family="Arial" font-weight="bold">PayPal</text></svg>
  {%- else -%}
    <svg viewBox="0 0 48 32" width="40" height="26" aria-label="Icon"><rect width="48" height="32" rx="4" fill="#e0e0e0"/><text x="24" y="20" text-anchor="middle" fill="#888" font-size="12" font-family="Arial">ICON</text></svg>
{%- endcase -%}
