{% comment %} Inline SVG icons {% endcomment %}
{% case name %}
  {% when 'search' %}
    <svg viewBox="0 0 20 20"><circle cx="9" cy="9" r="7" stroke="currentColor" stroke-width="2" fill="none"/><line x1="15" y1="15" x2="19" y2="19" stroke="currentColor" stroke-width="2"/></svg>
  {% when 'cart' %}
    <svg viewBox="0 0 20 20"><circle cx="7" cy="17" r="2"/><circle cx="15" cy="17" r="2"/><rect x="3" y="5" width="14" height="9" rx="2" fill="none" stroke="currentColor" stroke-width="2"/></svg>
  {% when 'user' %}
    <svg viewBox="0 0 20 20"><circle cx="10" cy="7" r="4"/><path d="M2 18c0-4 8-4 8-4s8 0 8 4" stroke="currentColor" stroke-width="2" fill="none"/></svg>
  {% when 'menu' %}
    <svg viewBox="0 0 20 20"><rect x="3" y="5" width="14" height="2"/><rect x="3" y="9" width="14" height="2"/><rect x="3" y="13" width="14" height="2"/></svg>
  {% when 'instagram' %}
    <svg viewBox="0 0 20 20"><circle cx="10" cy="10" r="7" stroke="currentColor" stroke-width="2" fill="none"/><circle cx="10" cy="10" r="3"/><circle cx="15" cy="5" r="1"/></svg>
  {% when 'facebook' %}
    <svg viewBox="0 0 20 20"><rect x="8" y="8" width="4" height="8" fill="currentColor"/><rect x="10" y="6" width="2" height="2" fill="currentColor"/><rect x="9" y="4" width="2" height="2" fill="currentColor"/></svg>
  {% when 'x' %}
    <svg viewBox="0 0 20 20"><line x1="5" y1="5" x2="15" y2="15" stroke="currentColor" stroke-width="2"/><line x1="15" y1="5" x2="5" y2="15" stroke="currentColor" stroke-width="2"/></svg>
  {% when 'visa' %}
    <svg viewBox="0 0 32 12"><rect x="0" y="0" width="32" height="12" fill="#1a1f71"/><text x="16" y="8" fill="#fff" text-anchor="middle" font-size="8">VISA</text></svg>
  {% when 'mastercard' %}
    <svg viewBox="0 0 32 12"><circle cx="11" cy="6" r="5" fill="#eb001b"/><circle cx="21" cy="6" r="5" fill="#f79e1b"/><text x="16" y="10" fill="#fff" text-anchor="middle" font-size="5">MC</text></svg>
  {% when 'amex' %}
    <svg viewBox="0 0 32 12"><rect x="0" y="0" width="32" height="12" fill="#2e77bb"/><text x="16" y="8" fill="#fff" text-anchor="middle" font-size="8">AMEX</text></svg>
  {% when 'paypal' %}
    <svg viewBox="0 0 32 12"><rect x="0" y="0" width="32" height="12" fill="#003087"/><text x="16" y="8" fill="#fff" text-anchor="middle" font-size="8">PayPal</text></svg>
{% endcase %}